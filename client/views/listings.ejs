<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Listings - Recruitment DSCA</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap">
  <link rel="stylesheet" href="/listings.css">
</head>
<body>
  <header>
    <h1>Job Listings</h1>
  </header>
  <main>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Listing ID</th>
            <th>Job Title</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% listings.forEach(listing => { %>
            <tr>
              <td><%= listing.listingId %></td>
              <td><%= listing.jobTitle %></td>
              <td>
                <span class="status-badge <%= listing.status %>"><%= listing.status %></span>
              </td>
              <td class="actions-cell">
                <a href="/?listingFilter=<%= listing.listingId %>&listingCheckbox=on" class="action-btn view-btn">View Candidates</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    
    <div class="form-wrapper">
      <div class="create-listing-form">
        <h2>Create New Job Listings</h2>
        <form action="/listings" method="POST" class="add-listing-form">
          <div class="form-group">
            <label for="jobTitle">Job Title:</label>
            <input 
              type="text" 
              id="jobTitle" 
              name="jobTitle" 
              required 
              placeholder="e.g. Software Engineer"
            >
          </div>
          <div class="form-group">
            <label for="quantity">Number of Listings:</label>
            <input 
              type="number" 
              id="quantity" 
              name="quantity" 
              min="1" 
              max="10" 
              value="1" 
              required
            >
          </div>
          <button type="submit" class="submit-btn">Create Listings</button>
        </form>
      </div>

      <div class="right-column">
        <a href="/" class="box">Back to Candidates</a>
      </div>
    </div>
  </main>
</body>
</html>